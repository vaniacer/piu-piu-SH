sprite_tree2 () {
    case $month in
        0[1-4]|12)
            mov - && BP2[i]="tree2 $OX $OY 5 5 $SC $SM $CS $CL $AS $AL" || { unset BP2[i]; return; }
            X1="\\e[$OY;$[OX+3]H" X2="\\e[$[OY+2];$[OX+1]H" X3="\\e[$[OY+3];$[OX+2]H" X4="\\e[$[OY+4];$[OX+2]H"
            #0123456
            #1   |_ 
            #2\||/  
            #3 \â•‘|_ 
            #4  â•‘/  
            #5  â•‘   
            #############################  1     2        3       4   5   6  #0
            cut "\\e[$OY;${SX}H$T2C"      ''    ''       ''   $X1'|' '_' ' ' #1
            cut "\\e[$[$OY+1];${SX}H$T2C" '\\'  '|'  $blk'|'     '/' ' '     #2
            cut "\\e[$[$OY+2];${SX}H$blk" '' $X2'\\'     'â•‘' $T2C'|' '_' ' ' #3
            cut "\\e[$[$OY+3];${SX}H$blk" ''    ''    $X3'â•‘'     '/' ' '     #4
            cut "\\e[$[$OY+4];${SX}H$blk" ''    ''    $X4'â•‘'     ' ';;       #5
        *)
            mov - && BP2[i]="tree2 $OX $OY 6 5 $SC $SM $CS $CL $AS $AL" || { unset BP2[i]; return; }
            X1="\\e[$OY;$[OX+1]H" X2="\\e[$[OY+3];$[OX+1]H" X3="\\e[$[OY+4];$[OX+2]H" X4="\\e[$[OY+5];$[OX+2]H"
            #0123456
            #1 _._  
            #2/   \ 
            #3\ | / 
            #4 \â•‘/\ 
            #5  â•‘_/ 
            #6  â•‘   
            #############################  1     2        3       4       5    6  #0
            cut "\\e[$OY;${SX}H$T2C"      '' $X1'_'      '.'     '_'     ' '      #1
            cut "\\e[$[$OY+1];${SX}H$T2C" '/'   ' '      ' '     ' '     '\\' ' ' #2
            cut "\\e[$[$OY+2];${SX}H$T2C" '\\'  ' '  $blk'|'     ' ' $T2C'/'  ' ' #3
            cut "\\e[$[$OY+3];${SX}H$T2C" '' $X2'\\' $blk'â•‘' $T2C'/'     '\\' ' ' #4
            cut "\\e[$[$OY+4];${SX}H$blk" ''    ''    $X3'â•‘' $T2C'_'     '/'  ' ' #5
            cut "\\e[$[$OY+5];${SX}H$blk" ''    ''    $X4'â•‘'     ' ';;            #6
    esac
}

case $month in
    0[1-4]|12) T3C=$SKY$BLD$cyn tree3H=8;; # winter & early spring
    0[5-8]   ) T3C=$SKY$GRN     tree3H=9;; # late spring & summer
    09|1[0-1]) T3C=$SKY$DIM$red tree3H=9;; # autumn
esac
sprite_tree3 () {
    case "$day$month" in
        2[1-9]12|3[0-1]12|0[1-9]01|1001)
            mov - && BP3[i]="tree3 $OX $OY 8 12 $SC $SM $CS $CL $AS $AL" || { unset BP3[i]; return; }
            X1="\\e[$OY;$[OX+6]H"     X2="\\e[$[OY+1];$[OX+4]H"     X3="\\e[$[OY+2];$[OX+4]H" X4="\\e[$[OY+3];$[OX+4]H$RED"
            X5="\\e[$[OY+4];$[OX+2]H" X6="\\e[$[OY+5];$[OX+2]H$red" X7="\\e[$[OY+7];$[OX+6]H"
            #0123456789ABCD
            #1      â˜…      
            #2    _â…|â—     
            #3    -/â—‹\â„-   
            #4    â—/|\\â—‹   
            #5  _/â„/â—\â…\   
            #6  â—‹///|\â„\â—  
            #7_/â…/â—/|â—‹\â…\- 
            #8      â•‘      
            #############################  1   2       3       4       5       6       7       8       9         A        B    C   D  #0
            cut "\\e[$OY;${SX}H$RED"      ''  ''      ''      ''      ''      ''   $X1'â˜…'     ' '                                     #1
            cut "\\e[$[$OY+1];${SX}H$GRN" ''  ''      ''      ''   $X2'_' $cyn'â…' $GRN'|' $BLU'â—'      ' '                            #2
            cut "\\e[$[$OY+2];${SX}H$GRN" ''  ''      ''      ''   $X3'-'     '/' $YLW'â—‹' $GRN'\\' $CYN'â„'  $GRN'-'      ' '          #3
            cut "\\e[$[$OY+3];${SX}H$GRN" ''  ''      ''      ''   $X4'â—' $GRN'/'     '|'     '\\'     '\\' $ylw'â—‹'      ' '          #4
            cut "\\e[$[$OY+4];${SX}H$GRN" ''  ''   $X5'_'     '/' $cyn'â„' $GRN'/' $blu'â—' $GRN'\\' $cyn'â…'  $GRN'\\'     ' '          #5
            cut "\\e[$[$OY+5];${SX}H$GRN" ''  ''   $X6'â—‹' $GRN'/'     '/'     '/'     '|'     '\\' $CYN'â„'  $GRN'\\' $RED'â—'  ' '     #6
            cut "\\e[$[$OY+6];${SX}H$GRN" '_' '/' $cyn'â…' $GRN'/' $YLW'â—' $GRN'/'     '|' $RED'â—‹'  $GRN'\\' $cyn'â…'  $GRN'\\' '-' ' ' #7
            cut "\\e[$[$OY+7];${SX}H$BLK" ''  ''      ''      ''      ''      ''   $X7'â•‘'     ' ';;                                   #8
        0[1-4]|12)
            mov - && BP3[i]="tree3 $OX $OY 8 9 $SC $SM $CS $CL $AS $AL" || { unset BP3[i]; return; }
            X1="\\e[$OY;$[OX+2]H"     X2="\\e[$[OY+1];$[OX+3]H" X3="\\e[$[OY+3];$[OX+1]H" X4="\\e[$[OY+4];$[OX+3]H"
            X5="\\e[$[OY+5];$[OX+4]H" X6="\\e[$[OY+6];$[OX+4]H" X7="\\e[$[OY+7];$[OX+4]H"
            #0123456789A
            #1  \|      
            #2   \| |_  
            #3_\_ â•‘/    
            #4 /\ â•‘ \/_ 
            #5   \â•‘ /   
            #6    â•‘/    
            #7    â•‘     
            #8    â•‘     
            #############################  1     2     3     4       5       6       7    8   9   A  #0
            cut "\\e[$OY;${SX}H$T3C"      ''    '' $X1'\\'  '|'     ' '                              #1
            cut "\\e[$[$OY+1];${SX}H$BLK" ''    ''    '' $X2'\\'    '|'     ' ' $T3C'|'  '_' ' '     #2
            cut "\\e[$[$OY+2];${SX}H$T3C" '_'   '\\'  '_'   ' ' $BLK'â•‘'     '/'     ' '              #3
            cut "\\e[$[$OY+3];${SX}H$T3C" '' $X3'/'   '\\'  ' ' $BLK'â•‘' $T3C' '     '\\' '/' '_' ' ' #4
            cut "\\e[$[$OY+4];${SX}H$BLK" ''    ''    '' $X4'\\'    'â•‘'     ' '     '/'  ' '         #5
            cut "\\e[$[$OY+5];${SX}H$BLK" ''    ''    ''    ''   $X5'â•‘'     '/'     ' '              #6
            cut "\\e[$[$OY+6];${SX}H$BLK" ''    ''    ''    ''   $X6'â•‘'     ' '                      #7
            cut "\\e[$[$OY+7];${SX}H$BLK" ''    ''    ''    ''   $X7'â•‘'     ' ';;                    #8
        *)
            mov - && BP3[i]="tree3 $OX $OY 9 9 $SC $SM $CS $CL $AS $AL" || { unset B3[i]; return; }
            X1="\\e[$OY;$[OX+3]H"     X2="\\e[$[OY+1];$[OX+2]H" X3="\\e[$[OY+2];$[OX+1]H" X4="\\e[$[OY+5];$[OX+3]H"
            X5="\\e[$[OY+6];$[OX+4]H" X6="\\e[$[OY+7];$[OX+4]H" X7="\\e[$[OY+8];$[OX+4]H"
            #0123456789A
            #1   _._    
            #2  /   \   
            #3 _\ | /   
            #4/  \â•‘/__  
            #5\_\/â•‘/  \ 
            #6   \â•‘|/_/ 
            #7    â•‘/    
            #8    â•‘     
            #9    â•‘     
            #############################  1     2       3        4        5       6       7       8   9    A  #0
            cut "\\e[$OY;${SX}H$T3C"      ''    ''      ''    $X1'_'      '.'     '_'     ' '                  #1
            cut "\\e[$[$OY+1];${SX}H$T3C" ''    ''   $X2'/'      ' '      ' '     ' '     '\\'    ' '          #2
            cut "\\e[$[$OY+2];${SX}H$T3C" '' $X3'_'     '\\'     ' '  $BLK'|'     ' ' $T3C'/'     ' '          #3
            cut "\\e[$[$OY+3];${SX}H$T3C" '/'   ' '     ' '      '\\' $BLK'â•‘' $T3C'/'     '_'     '_' ' '      #4
            cut "\\e[$[$OY+4];${SX}H$T3C" '\\'  '_' $BLK'\\' $T3C'/'  $BLK'â•‘' $T3C'/'     ' '     ' ' '\\' ' ' #5
            cut "\\e[$[$OY+5];${SX}H$BLK" ' '   ' '     ' '   $X4'\\'     'â•‘' $T3C'|' $BLK'/' $T3C'_' '/'  ' ' #6
            cut "\\e[$[$OY+6];${SX}H$BLK" ''    ''      ''       ''    $X5'â•‘'     '/'     ' '                  #7
            cut "\\e[$[$OY+7];${SX}H$BLK" ''    ''      ''       ''    $X6'â•‘'     ' '                          #8
            cut "\\e[$[$OY+8];${SX}H$BLK" ''    ''      ''       ''    $X7'â•‘'     ' ';;                        #9
    esac
}
#------------------------{ Bird }---------------------------------------------------------------------------------------
# âŒ„ _ 
#     ^
sprite_bird () {
    mov - && BP1[i]="bird $OX $OY 2 2 $SC $SM $CS $CL $AS $AL" || { unset BP1[i]; return; }
    case $AS in
          0) cut "\\e[$OY;${SX}H$SKY$blk"      'âŒ„' ' '
             cut "\\e[$[$OY+1];${SX}H$SKY"     ' ' ' ';;
          1) cut "\\e[$OY;${SX}H$SKY$blk"      '_' ' '
             cut "\\e[$[$OY+1];${SX}H$SKY"     ' ' ' ';;
          2) cut "\\e[$OY;${SX}H$SKY"          ' ' ' '
             cut "\\e[$[$OY+1];${SX}H$SKY$blk" '^' ' ';;
    esac
}
#------------------------{ House }--------------------------------------------------------------------------------------
# â•Œ â• â”€ â” â”„ â”… â”ˆ â”‰ â• â•´â•¶ â•¸â•º â•¼ â•¾ â•²  â•µ â•· â•¹ â•» â•½ â•¿ â”‚ â”ƒ â•Ž â• â”† â”‡ â”Š â”‹ â•° â•± â”Œ â” â”Ž â” â” â”‘ â”’ â”“ â”” â”• â”– â”— â”˜ â”™ â”š â”› â”œ â” â”ž â”Ÿ â”  â”¡ â”¢ â”£ â”¤ â”¥ â”¦
# â”§ â”¨ â”© â”ª â”« â”¬ â”­ â”® â”¯ â”± â”² â”³ â”´ â”µ â”¶ â”· â”¸ â”¹ â”º â”» â”¼ â”½ â”¾ â”¿ â•€ â• â•‚ â•ƒ â•„ â•… â•† â•‡ â•ˆ â•‰ â•Š â•‹ â•‘ â•’ â•“ â•” â•• â•– â•— â•˜ â•™ â•š â•› â•œ â•  â•Ÿ â•  â•¡ â•¢ â•£ â•¤ â•¥ â•¦ â•§
sprite_house1 () { #â•¨ â•© â•ª â•« â•¬ â•­ â•® â•¯ â–€ â– â–‚ â–ƒ â–„ â–… â–† â–‡ â–ˆ â–‰ â–Š â–‹ â–Œ â– â–Ž â–â– â–‘ â–’ â–“ â–” â–• â–– â–— â–˜ â–™ â–š â–› â–œ â– â–ž â–Ÿ
    mov - && BP1[i]="house1 $OX $OY 2 6 $SC $SM $CS $CL $AS $AL" || { unset BP1[i]; return; }
    CM1=$SKY$DIM$GRN CM2=$SKY$blk
    #0123456
    #1â–â–‚â–ƒâ–‚â– 
    #2â”‚â–˜â–â–| 
    ############################  1   2   3   4   5   6  #0
    cut "\\e[$OY;${SX}H$CM1"     'â–' 'â–‚' 'â–ƒ' 'â–‚' 'â–' ' ' #1
    cut "\\e[$[OY+1];${SX}H$CM2" 'â”‚' 'â–˜' 'â–' 'â–' '|' ' ' #2
}
sprite_house2 () {
    mov - && BP2[i]="house2 $OX $OY 9 30 $SC $SM $CS $CL $AS $AL" || { unset BP2[i]; return; }
    CM1="$SKY$BLU" CM2=$SKY$BLD$YLW CM3=$SKY$YLW CM4=$SKY$ylw CM5=$SKY$blk
    X1="\\e[$OY;$[OX+9]H"     X2="\\e[$[OY+1];$[OX+9]H" X3="\\e[$[OY+2];$[OX+8]H" X4="\\e[$[OY+3];$[OX+8]H"
    X5="\\e[$[OY+4];$[OX+7]H" X6="\\e[$[OY+5];$[OX+7]H" X7="\\e[$[OY+6];$[OX+6]H" X8="\\e[$[OY+7];$[OX+6]H"
    #0123456789ABCDEFJHIJKLMNOPQRSTU
    #1         â•‚                    
    #2         â•§                    
    #3        â•± â•²                   
    #4        |â–|                   
    #5       â”®â”·â”â”·â”­                  
    #6       â”‚ â–ˆ |                  
    #7      â”®â”·â”â”â”â”·â”­                 
    #8      â”‚ â–›â–”â–œ â”‚â–„â–„â–„â–„â–‚â–           
    #9â–‚ â•¬ â–ƒ â”ƒ â–Œâ–’â– â”ƒ â–˜â–—â–˜â”¿â”ƒâ–— â•‚ â•ª â–„  â–– 
    ################################  1   2   3   4   5   6     7     8     9     A   B   C   D       E       F       J       H       I       J   K   L   M   N   O   P   Q   R   S   T   U  #0
    cut "\\e[$OY;${SX}H$CM2"         ''  ''  ''  ''  ''  ''    ''    ''    '' $X1'â•‚' ' '                                                                                                     #1
    cut "\\e[$[OY+1];${SX}H$CM3"     ''  ''  ''  ''  ''  ''    ''    ''    '' $X2'â•§' ' '                                                                                                     #2
    cut "\\e[$[OY+2];${SX}H$CM4"     ''  ''  ''  ''  ''  ''    ''    '' $X3'â•±'   ' ' 'â•²' ' '                                                                                                 #3
    cut "\\e[$[OY+3];${SX}H$CM5"     ''  ''  ''  ''  ''  ''    ''    '' $X4'|'   'â–' '|' ' '                                                                                                 #4
    cut "\\e[$[OY+4];${SX}H$CM1"     ''  ''  ''  ''  ''  ''    '' $X5'â”®'   'â”·'   'â”' 'â”·' 'â”­' ' '                                                                                             #5
    cut "\\e[$[OY+5];${SX}H$CM5"     ''  ''  ''  ''  ''  ''    '' $X6'â”‚'   ' '   'â–ˆ' ' ' 'â”‚' ' '                                                                                             #6
    cut "\\e[$[OY+6];${SX}H$CM1"     ''  ''  ''  ''  ''  '' $X7'â”®'   'â”·'   'â”'   'â”' 'â”' 'â”·' 'â”­'     ' '                                                                                     #7
    cut "\\e[$[OY+7];${SX}H$CM5"     ''  ''  ''  ''  ''  '' $X8'â”‚'   ' '   'â–›'   'â–”' 'â–œ' ' ' 'â”‚' $CM1'â–„' $CM1'â–„' $CM1'â–„' $CM1'â–„' $CM6'â–‚' $CM6'â–' ' '                                         #8
    cut "\\e[$[OY+8];${SX}H$CM5"     'â–‚' ' ' 'â•¬' ' ' 'â–ƒ' ' '   'â”ƒ'   ' '   'â–Œ'   'â–’' 'â–' ' ' 'â”ƒ'     ' '     'â–˜'     'â–—'     'â–˜'     'â”¿'     'â”ƒ' 'â–—' ' ' 'â•‚' ' ' 'â•ª' ' ' 'â–„' ' ' ' ' 'â––' ' ' #9
}
sprite_house3 () {
    mov - && BP3[i]="house3 $OX $OY 4 17 $SC $SM $CS $CL $AS $AL" || { unset BP3[i]; return; }
    CM1=$SKY$DIM$MGN CM2=$SKY$blk CM3=$SKY$DIM$CYN
    X1="\\e[$OY;$[OX+5]H" X2="\\e[$[OY+1];$[OX+2]H" X3="\\e[$[OY+2];$[OX+2]H"
    #0123456789ABCDEFJHI
    #1     â––            
    #2  â–‚â–„â–†â–ˆâ–ˆâ–†â–„â–‚        
    #3  â”ƒâ•’â••â•’â••â•’â••â”ƒ â”®â”â”­    
    #4â• â•¬â”ƒâ”µâ”˜â”µâ”¶â””â”¶â”ƒâ•¬â•£â–“â• â•¬â•£â–– 
    ############################  1   2       3       4       5       6       7       8       9   A       B   C       D       E   F   J       H   I  #0
    cut "\\e[$OY;${SX}H$CM2"     ''  ''      ''      ''      ''   $X1'â––'     ' '                                                                     #1
    cut "\\e[$[OY+1];${SX}H$CM1" ''  ''   $X2'â–‚'     'â–„'     'â–†'     'â–ˆ'     'â–ˆ'     'â–†'     'â–„' 'â–‚'     ' '                                         #2
    cut "\\e[$[OY+2];${SX}H$CM2" ''  ''   $X3'â”ƒ'     'â•’'     'â••'     'â•’'     'â••'     'â•’'     'â••' 'â”ƒ'     ' ' 'â”®'     'â”'     'â”­' ' '                 #3
    cut "\\e[$[OY+3];${SX}H$CM3" 'â• ' 'â•¬' $CM2'â”ƒ' $CM2'â”µ' $CM2'â”˜' $CM2'â”µ' $CM2'â”¶' $CM2'â””' $CM2'â”¶' 'â”ƒ' $CM3'â•¬' 'â•£' $CM2'â–“' $CM3'â• ' 'â•¬' 'â•£' $CM2'â––' ' ' #4
}
#------------------------{ BOOM }---------------------------------------------------------------------------------------
sprite_boom () {
    BX=$OX BY=$OY
    [[ $AS -ge $AL ]] && { unset BP3[i]; return; }
    case $AS in
          0) cut "\e[$BY;$[BX+3]H$YLW"             '_'      #     _
             cut "\e[$[BY+1];$[BX+2]H$YLW"        '(_)';;   #    (_)
          1) cut "\e[$BY;$[BX+2]H$RED"            '.-.'     #    .-.
             cut "\e[$[BY+1];$[BX+1]H$RED"       '(   )'    #   (   )
             cut "\e[$[BY+2];$[BX+1]H$RED"        '`-Â´';;   #    `-Â´
          2) cut "\e[$[BY-1];$[BX+3]H$red"         '_'      #     _
             cut "\e[$BY;$[BX+1]H$red"           '-   +'    #   -   +
             cut "\e[$[BY+1];${BX}H$red"        '(     )'   #  (     )
             cut "\e[$[BY+2];$[BX+1]H$red"       '+ _ -';;  #   + _ -
          3) cut "\e[$[BY-1];$[BX+2]H$DIM$RED"    '- -'     #    - -
             cut "\e[$BY;${BX}H$DIM$RED"        'Â´     `'   #  Â´     `
             cut "\e[$[BY+1];$[BX-1]H$DIM$RED" "'       '"  # '       '
             cut "\e[$[BY+2];${BX}H$DIM$RED"    '`  _  Â´';; #  `  _  Â´
          4) cut "\e[$[BY-1];$[BX+2]H$SKY"        '   '     #  eraser
             cut "\e[$BY;${BX}H$SKY"            '       '   #
             cut "\e[$[BY+1];$[BX-1]H$SKY"     '         '  #
             cut "\e[$[BY+2];${BX}H$SKY"        '       ';; #
    esac
    mov -; BP3[i]="boom $BX $BY 0 0 $SC $SM $CS $CL $AS $AL"
}
#------------------------{ Sun }----------------------------------------------------------------------------------------
sprite_Sun () {
    mov -; BP1[i]="Sun $Sunsendx 1 9 18 $SC 7 $CS $CL $AS $AL"
    case $AS in
          0) cut "\e[1;${Sunsendx}H$SKY$YLW"     '       ___ |       '
             cut "\e[2;${Sunsendx}H$SKY$BLD$YLW" '---````    \       '
             cut "\e[3;${Sunsendx}H$SKY$YLW"     '           _`.     '
             cut "\e[4;${Sunsendx}H$SKY$BLD$YLW" '        ../   `..__'
             cut "\e[5;${Sunsendx}H$SKY$YLW"     '     ../        /  '
             cut "\e[6;${Sunsendx}H$SKY$YLW"     '    /          /   '
             cut "\e[7;${Sunsendx}H$SKY$BLD$YLW" '              /    '
             cut "\e[8;${Sunsendx}H$SKY$YLW"     '              /    '
             cut "\e[9;${Sunsendx}H$SKY$BLD$YLW" '             /     ';;
          1) cut "\e[1;${Sunsendx}H$SKY$YLW"     '_...---``  |       '
             cut "\e[2;${Sunsendx}H$SKY$BLD$YLW" '        _.-\       '
             cut "\e[3;${Sunsendx}H$SKY$YLW"     '   _.--`    `.     '
             cut "\e[4;${Sunsendx}H$SKY$YLW"     ' -`          ,`..__'
             cut "\e[5;${Sunsendx}H$SKY$BLD$YLW" '           ,`     |'
             cut "\e[6;${Sunsendx}H$SKY$YLW"     '         ,`       |'
             cut "\e[7;${Sunsendx}H$SKY$YLW"     '       _`        | '
             cut "\e[8;${Sunsendx}H$SKY$BLD$YLW" '                 | '
             cut "\e[9;${Sunsendx}H$SKY$YLW"     '                 | ';;
          2) cut "\e[1;${Sunsendx}H$SKY$BLD$YLW" '     _...--|       '
             cut "\e[2;${Sunsendx}H$SKY$BLD$YLW" '..--`      \       '
             cut "\e[3;${Sunsendx}H$SKY$BLD$YLW" '         .. `.     '
             cut "\e[4;${Sunsendx}H$SKY$YLW"     '     _.-`     `..__'
             cut "\e[5;${Sunsendx}H$SKY$BLD$YLW" '  ..`         .`   '
             cut "\e[6;${Sunsendx}H$SKY$BLD$YLW" '             /     '
             cut "\e[7;${Sunsendx}H$SKY$YLW"     '            /      '
             cut "\e[8;${Sunsendx}H$SKY$BLD$YLW" '          .`       '
             cut "\e[9;${Sunsendx}H$SKY$YLW"     '         `         ';;
    esac
}
