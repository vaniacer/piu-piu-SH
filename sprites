    mov - && BP3[i]="cloud3 $OX $OY 3 11 $SC $SM $CS $CL $AS $AL" || { unset BP3[i]; return; }
    X1="\\e[$OY;$[OX+1]H" X2="\\e[$[OY+2];$[OX+1]H"
    #0123456789ABC
    #1 ,+Â¯`.-Â¯`.  
    #2(         ) 
    #3 `--.,,.-Â´  
    #############################  1     2   3   4   5   6   7   8   9   A   B   C  #0
    cut "\\e[$OY;${SX}H$C3C"      '' $X1',' '+' 'Â¯' '`' '.' '-' 'Â¯' '`' '.' ' '     #1
