    #012345678
    #1 ,-._..
    #2(      )
    #3 `-...Â´
    #                              1        2   3   4   5   6   7   8
    cut "\\e[$OY;${SX}H$C2C"       '' "$X1"',' '-' '.' '_' '.' '.'     #1   
    cut "\\e[$[$OY+1];${SX}H$C2C"  '('     ' ' ' ' ' ' ' ' ' ' ' ' ')' #2
    cut "\\e[$[$OY+2];${SX}H$C2C"  '' "$X2"'`' '-' '.' '.' '.' 'Â´'     #3
}

