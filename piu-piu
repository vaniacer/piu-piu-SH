# check bash version
case ${BASH_VERSINFO[@]::2} in [1-3]' '[0-9][0-9]|[1-3]' '[0-9]|'4 '[0-1])
    echo -e "\nYour BASH is too short!) 4.2+ required to run this game, your is - ${BASH_VERSINFO[@]}"
    exit 1;;
esac      #                                                                  â–‘ â–‘ â–‘â–‘â–‘ â–‘ â–‘â–‘ â–‘â–‘â–‘â–’ â–’â–’â–’â–‘â–‘â–‘ â–‘â–‘ â–‘â–‘ â–‘ â–‘
#--------------------------------------------------------------------+ â–‘   â–‘â–‘â–‘â–‘ â–‘â–‘â–‘â–‘â–’â–’â–’â–’ â–’â–’â–’â–“ â–“â–“â–“â–’â–’â–’â–’â–’â–’â–’â–‘â–‘â–‘â–‘ â–‘â–‘â–‘â–‘ â–‘ â–‘ â–‘
# Color picker, usage: printf $BLD$CUR$RED$BBLU'Hello World!'$DEF    |   â–‘
#-------------------------+--------------------------------+---------+        â–‘   â–‘â–‘â–‘ â–‘â–‘     â–‘  â–‘â–‘      â–‘â–‘  â–‘â–‘ â–‘
#       Text color        |       Background color         |         |      â–‘   â–‘  â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–’â–ˆâ–ˆâ–‘  â–’â–ˆâ–ˆ       â–‘
#-----------+-------------+--------------+-----------------+         |â–‘       â–‘ â–‘â–‘â–’â–“â–ˆâ–ˆ â–’â–“â–ˆâ–ˆ â–“â–“â–“â–ˆâ–ˆâ–“ â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘â–‘ â–‘
# Base color|Lighter shade| Base color   | Lighter shade   |         |     â–‘ â–‘ â–‘â–‘â–’â–“â–ˆâ–ˆ â–’â–“â–ˆâ–ˆ â–’â–’â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘ â–’â–“â–ˆâ–ˆâ–‘
#-----------+-------------+--------------+-----------------+         |  â–‘ â–‘      â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–‘ â–‘â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘â–‘ â–‘ â–‘
BLK='\e[30m'; blk='\e[90m'; BBLK='\e[40m'; bblk='\e[100m' #| Black   |       â–‘  â–’â–“â–ˆâ–ˆâ–“â–“â–“â–“  â–‘ â–’â–“â–ˆâ–ˆâ–‘ â–’â–“â–ˆâ–ˆâ–‘â–‘â–’â–“â–ˆâ–ˆ â–‘     â–‘ â–‘
RED='\e[31m'; red='\e[91m'; BRED='\e[41m'; bred='\e[101m' #| Red     |        â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–’â–’â–’â–‘ â–‘ â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–‘â–‘ â–‘
GRN='\e[32m'; grn='\e[92m'; BGRN='\e[42m'; bgrn='\e[102m' #| Green   |     â–‘ â–‘â–’â–“â–“â–“â–“ â–‘ â–‘â–‘â–’â–“â–“â–“â–“â–“â–“ â–‘ â–’â–“â–“â–“â–“â–“â–‘
YLW='\e[33m'; ylw='\e[93m'; BYLW='\e[43m'; bylw='\e[103m' #| Yellow  |      â–‘ â–’â–’ â–‘ â–‘ â–‘ â–‘â–’â–’â–’â–’â–’â–’ â–‘ â–‘â–‘â–’â–’â–’â–’â–‘  â–‘
BLU='\e[34m'; blu='\e[94m'; BBLU='\e[44m'; bblu='\e[104m' #| Blue    |  â–‘ â–‘                                      â–‘     â–‘
MGN='\e[35m'; mgn='\e[95m'; BMGN='\e[45m'; bmgn='\e[105m' #| Magenta |â–‘                      â–‘â–‘ â–’â–’â–ˆâ–ˆâ–ˆâ–‘              â–‘
CYN='\e[36m'; cyn='\e[96m'; BCYN='\e[46m'; bcyn='\e[106m' #| Cyan    |     â–‘ â–‘ â–‘        â–‘â–‘â–‘ â–’â–ˆâ–ˆâ–ˆâ–ˆ â–’â–“â–ˆâ–ˆâ–ˆâ–‘             â–‘
WHT='\e[37m'; wht='\e[97m'; BWHT='\e[47m'; bwht='\e[107m' #| White   |  â–‘ â–‘ â–‘        â–‘ â–’â–ˆâ–ˆâ–ˆâ–ˆâ–’â–“â–“â–“â–“ â–‘â–‘â–’â–“â–“â–ˆâ–ˆâ–ˆ â–‘â–‘ â–‘
#-------------------------{ Effects }----------------------+---------+             â–‘ â–’â–“â–“â–“â–“ â–’â–ˆâ–ˆâ–ˆâ–ˆâ–‘â–’â–“â–ˆâ–ˆâ–ˆâ–‘â–‘
DEF='\e[0m'   #Default color and effects                             |              â–’ â–’â–’  â–’â–“â–“â–“â–“â–’â–“â–ˆâ–ˆâ–ˆâ–‘              â–‘
BLD='\e[1m'   #Bold\brighter                                         |     â–‘ â–‘         â–‘â–‘â–‘ â–’â–’â–’ â–‘â–‘â–’â–’â–‘
DIM='\e[2m'   #Dim\darker                                            |â–‘ â–‘
CUR='\e[3m'   #Italic font                                           |          â–‘   â–‘â–‘â–‘ â–‘â–‘     â–‘  â–‘â–‘      â–‘â–‘  â–‘â–‘ â–‘
UND='\e[4m'   #Underline                                             |        â–‘   â–‘  â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–’â–ˆâ–ˆâ–‘  â–’â–ˆâ–ˆ        â–‘
INV='\e[7m'   #Inverted                                              |   â–‘ â–‘    â–‘ â–‘â–‘â–’â–“â–ˆâ–ˆ â–’â–“â–ˆâ–ˆ â–“â–“â–“â–ˆâ–ˆâ–“ â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘â–‘ â–‘
COF='\e[?25l' #Cursor Off                                            |       â–‘ â–‘ â–‘â–‘â–’â–“â–ˆâ–ˆ â–’â–“â–ˆâ–ˆ â–’â–’â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘ â–’â–“â–ˆâ–ˆâ–‘    â–‘
CON='\e[?25h' #Cursor On                                             |             â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–‘ â–‘â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆ â–‘â–’â–“â–ˆâ–ˆâ–‘â–‘ â–‘ â–‘
#------------------------{ Functions }-------------------------------+â–‘        â–‘  â–’â–“â–ˆâ–ˆâ–“â–“â–“â–“  â–‘ â–’â–“â–ˆâ–ˆâ–‘ â–’â–“â–ˆâ–ˆâ–‘â–‘â–’â–“â–ˆâ–ˆ â–‘
# Text positioning, usage: XY 10 10 'Hello World!'                   |          â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–’â–’â–’â–‘ â–‘ â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ â–’â–“â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–‘â–‘ â–‘
XY () { printf "\e[$2;${1}H$3"; }                                   #|       â–‘ â–‘â–’â–“â–“â–“â–“ â–‘ â–‘â–‘â–’â–“â–“â–“â–“â–“â–“ â–‘ â–’â–“â–“â–“â–“â–“â–‘
# Print line, usage: line - 10 | line -= 20 | line 'Hello World!' 20 |  â–‘     â–‘ â–’â–’ â–‘ â–‘ â–‘ â–‘â–’â–’â–’â–’â–’â–’ â–‘ â–‘â–‘â–’â–’â–’â–’â–‘  â–‘       â–‘
line () { printf -v _L %$2s; printf -- "${_L// /$1}"; }             #|
# Create sequence like {0..(X-1)}                                    | â–‘ â–‘ â–‘ â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’â–’ â–’â–’â–’â–“ â–“â–“â–“â–’â–’â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘ â–‘ â–‘ â–‘ â–‘ â–‘
que () { printf -v _N %$1s; _N=(${_N// / 1}); printf "${!_N[*]}"; } #|    â–‘ â–‘ â–‘â–‘â–‘ â–‘ â–‘â–‘ â–‘â–‘â–‘â–’ â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘ â–‘ â–‘
#----{ Start opt }------------------------------------{ description  }---------------------{ def. values }--------------
  background=true                                     # background objects visibility             (true)
    bossborn=                                         # boss starter
    tillboss=100                                      # frags needed to fight with boss           (100)
     bhealth=100                                      # boss' health                              (100)
     showfps=true                                     # show FPS counter if set                   (true)
     enumber=0                                        # enemies counter                           (0)
     bonuses=("ammo" "life" "ammo" "gunup" "ammo")    # bonuses, more ammo, less life ang gunup
       enmax=100                                      # max number of enemies                     (10)
       month=$(date +'%m')                            # get current month
       crate=0                                        # crate drop                                (0)
       frags=0                                        # hero1 frags counter                       (0)
        life=3                                        # hero1 life counter                        (3)
        ammo=100                                      # hero1 ammo counter                        (100)
         day=$(date +'%d')                            # get current  day
         DHC=$BLK                                     # default hero color                        ($BLK)
         DSC=$RED                                     # default symbol color                      ($RED)
         rnd=10                                       # random seed 4 bonuses                     (10)
         DHS=â˜…                                        # default symbol                            (â˜…)
         spd=0.0001                                   # game\read speed                           (0.0001)
         MSN=1111                                     # messanger randomizer                      (1111)
         HOU=1111                                     # houses randomizer                         (1111)
          ad='Die alien scum!'                        # ad plane message                          'Die alien scum!'
           G=1                                        # gun                                       (1)(max 5)
#----{ Multipleyer config }---------------------------{ description  }---------------------{ def. values }--------------
      frags2=0                                        # hero2 frags counter                       (0)
       life2=3                                        # hero2 life counter                        (3)
       ammo2=100                                      # hero2 ammo counter                        (100)
          G2=1                                        # hero2 gun                                 (1)(max 5)
       caddr=( $(ip a | grep 'inet ' | sed '/127.0.0.1/d; s/.*inet //g; s|/.*$||g') )
       saddr=
       sport=54321
       cport=54322

[[ -e ~/.piuconf ]] && . ~/.piuconf
#================================================{ Messages }===========================================================
case "$day$month$virus" in
    *covid-19) ad='Stay at home!';;&
        1101*) ad='Happy birthday Yura $)';;
        0202*) ad='It is groundhog day !)';;
        2002*) ad='Happy birthday Romka !)';;
        2802*) ad='Happy birthday Matvey !)';;
        3006*) ad='Happy birthday Natusya !)';;
        0803*) ad='Hold on guyz $)';;
        0905*) ad='Ð”ÐµÐ½ÑŒ Ð¿Ð¾Ð±ÐµÐ´Ñ‹!';;
esac
#------------------------{ Ad plane text }------------------------------------------------------------------------------
ad_plane_text () {
    case $type in duel) ad='Try to catch this!' ad_new=;; esac
    CM4= CM5=; case "$day$month" in 0905) CM4=$bylw CM5=$bblk;; esac
    for ((i=0; i<${#ad}; i++)); do ad_new+="$CM5$BLD$red${ad:$i:1} "; done
    new_ad=( ${ad_new//  /âŽ• } ) line=( ${new_ad[@]//*/$CM4$blk-} ) width=$((19+${#new_ad[@]}))
};  ad_plane_text

#â†‘ â†“ â† â†’ â–² â–¼ â–¶ â—€ â–· â— â–³ â–½
sprite_help () {
    x=$[$endx/2-25/2]
    y=$[$endy/2-5]
    XY $[x+19]  $y                                       'â–²'
    XY $[x+19] $[y+1]                              "${RED}W$DEF"
    XY  $x     $[y+2] "${BLD}Control with:$DEF  â—€ ${RED}A S D$DEF â–¶"
    XY $[x+19] $[y+3]                                    'â–¼'
    XY  $x     $[y+5] "${BLD}Shoot\select with:$DEF ${YLW}P $BLD$red-=$GRN>$DEF"
}

sprite_lose () {
    x=$[$endx/2-25/2] CM1=$BLD$red
    y=$[$endy/2-5]    CM2=$DIM$RED
    XY $x  $y    "$CM1  ____    _    __  __ _____ $DEF"
    XY $x $[y+1] "$red / ___|  / \  |  \/  | ____|$DEF"
    XY $x $[y+2] "$red| | __  / _ \ | |\/| |  _|  $DEF"
    XY $x $[y+3] "$RED| |_\ \/ ___ \| |  | | |___ $DEF"
    XY $x $[y+4] "$CM2 \____/_/   \_\_|__|_|_____|$DEF"
    XY $x $[y+5] "$CM1  / _ \ \   / / ____|  _ \  $DEF"
    XY $x $[y+6] "$red | | | \ \ / /|  _| | |_) | $DEF"
    XY $x $[y+7] "$RED | |_| |\ V / | |___|  _ <  $DEF"
    XY $x $[y+8] "$CM2  \___/  \_/  |_____|_| \_| $DEF"
}

sprite_win () {
    x=$[$endx/2-25/2] CM1=$BLD$grn
    y=$[$endy/2-5]    CM2=$DIM$GRN
    XY $x  $y  "${CM1}__        ______ _    _    $DEF"
    XY $x $[y+1] "$grn\ \      / /____| |  | |   $DEF"
    XY $x $[y+2] "$grn \ \ /\ / /  _| | |  | |   $DEF"
    XY $x $[y+3] "$GRN  \ V  V /| |___| |__| |__ $DEF"
    XY $x $[y+4] "$CM2 __\_/\_/_|_____|____|____|$DEF"
    XY $x $[y+5] "$CM1|  _ \ / _ \| \ | | ____| |$DEF"
    XY $x $[y+6] "$grn| | | | | | |  \| |  _| | |$DEF"
    XY $x $[y+7] "$GRN| |_| | |_| | |\  | |___|_|$DEF"
    XY $x $[y+8] "$CM2|____/ \___/|_| \_|_____(_)$DEF"
}
#================================================{ Sprites }============================================================
case $month in
    0[1-4]|12) # winter & early spring
        SKY=$DEF$bwht         # sky color
        LND=$DEF$BLD$WHT$BWHT #land color
        BRD=200               # birds rnd
        CLD=30                # clouds rnd
        TRE=50;;              # trees rnd

    0[5-8]   ) # late spring & summer
        SKY=$DEF$bcyn         # sky color
        LND=$DEF$DIM$GRN$bgrn # land color
        BRD=150               # birds rnd
        CLD=50                # clouds rnd
        TRE=40;;              # trees rnd

    09|1[0-1]) # autumn
        SKY=$DEF$BCYN         # sky color
        LND=$DEF$DIM$YLW$BGRN # land color
        BRD=100               # birds rnd
        CLD=20                # clouds rnd
        TRE=50;;              # trees rnd
esac
case $game in server) BRD=400 CLD=100 TRE=100;; esac
        
